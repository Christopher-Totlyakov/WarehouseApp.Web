@{
    ViewData["Title"] = "Admin Dashboard";
}
@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            }

        .btn-block {
            padding: 10px 15px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s, color 0.3s;
            margin-top: 10px;
        }

        .btn-success:hover {
            background-color: #28a745;
            color: white;
        }

        .btn-warning:hover {
            background-color: #ffc107;
            color: white;
        }

        .btn-info:hover {
            background-color: #17a2b8;
            color: white;
        }

        .btn-primary:hover {
            background-color: #007bff;
            color: white;
        }

    </style>
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-success">Welcome, @User.Identity.Name!</h1>
        <p class="lead text-muted">Manage your warehouse efficiently with the admin tools below.</p>
    </div>

    <div class="row mt-4">

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-success">Orders</h5>
                    <p class="card-text">View, create, and update orders easily.</p>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="btn btn-success btn-block">Manage Orders</a>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Create" class="btn btn-success btn-block" >Add Orders</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-warning">Requests</h5>
                    <p class="card-text">View and track product requests.</p>
                    <a asp-area="Admin" asp-controller="Requests" asp-action="Index" class="btn btn-warning btn-block">Manage Requests</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-info">Sales</h5>
                    <p class="card-text">Review and analyze sales data.</p>
                    <a asp-area="Admin" asp-controller="Sales" asp-action="Index" class="btn btn-info btn-block">Manage Sales</a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title text-primary">User Management</h5>
                    <p class="card-text">Activate, deactivate, and manage user accounts.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary btn-block">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
