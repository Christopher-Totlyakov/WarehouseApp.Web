@using WarehouseApp.Web.ViewModels.Requests
@model IEnumerable<RequestListViewModel>

<div class="container mt-4">
    <h2>Requests</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Requester Email</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.RequestId</td>
                    <td>@request.RequesterEmail</td>
                    <td>@request.Status</td>
                    <td>@request.RequestDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@request.RequestId">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
