@using WarehouseApp.Web.ViewModels.Sales
@model SaleDetailsViewModel

<div class="container mt-4">
    <h2>Sale Details</h2>
    <p><strong>Sale ID:</strong> @Model.SaleId</p>
    <p><strong>Customer:</strong> @Model.CustomerName</p>
    <p><strong>Date:</strong> @Model.SaleDate.ToString("g")</p>
    <p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>

    <h3>Products</h3>
    @if (!Model.Products.Any())
    {
        <p>No products in this sale.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.QuantitySold</td>
                        <td>@product.UnitPrice.ToString("C")</td>
                        <td>@product.TotalPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
