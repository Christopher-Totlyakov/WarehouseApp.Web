@using WarehouseApp.Web.ViewModels.Sales
@model IEnumerable<SaleViewModel>

<div class="container mt-4">
    <h2>Sales</h2>
    @if (!Model.Any())
    {
        <p>No sales available.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Sale ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Total Amount</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>
                        <td>@sale.SaleId</td>
                        <td>@sale.CustomerName</td>
                        <td>@sale.SaleDate</td>
                        <td>@sale.TotalAmount.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@sale.SaleId" class="btn btn-primary btn-sm">
                                View Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
