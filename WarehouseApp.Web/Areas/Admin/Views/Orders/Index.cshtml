@using WarehouseApp.Web.ViewModels.Orders
@model List<OrderListViewModel>

<div class="container mt-4">
    <h2>Orders</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Supplier</th>
                <th>Order Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.SupplierName</td>
                    <td>@order.OrderDate</td>
                    <td>
                        @order.Status
                        @if (User.HasClaim("UserType", "WarehouseWorker"))
                        {
                        <a asp-action="EditStatus" asp-route-id="@order.OrderId" class="btn btn-warning btn-sm ml-2">Edit</a>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
