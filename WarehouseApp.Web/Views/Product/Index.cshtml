@using WarehouseApp.Web.ViewModels.Product
@model IEnumerable<ProductIndexViewModel>

<div class="container mt-4">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@(string.IsNullOrEmpty(product.ImagePath) ? "/img/NoPicture.jpg" : product.ImagePath)"
                         class="card-img-top"
                         alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-truncate">@product.Description</p>
                        <h6 class="text-success">Price: @product.Price.ToString("C")</h6>
                        <p>In Stock: <strong>@product.StockQuantity</strong></p>
                        <p>Categories:</p>
                        <ul class="list-group list-group-flush">
                            @foreach (var category in product.Categories)
                            {
                                <li class="list-group-item">@category</li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-center">
                        <a href="/Products/Details/@product.Id" class="btn btn-primary">View Details</a>
                        <a href="/Products/Buy/@product.Id" class="btn btn-success">Buy Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>