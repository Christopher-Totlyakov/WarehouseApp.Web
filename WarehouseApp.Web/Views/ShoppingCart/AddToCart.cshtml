@using WarehouseApp.Web.ViewModels.ShoppingCart
@model AddToCartViewModel

<!-- Background Overlay -->
<div class="modal-backdrop show"></div>

<!-- Modal -->
<div class="modal d-block" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Cart</h5>
                <button type="button" class="btn-close" onclick="window.history.back()" aria-label="Close"></button>
            </div>
            <form asp-action="AddToCart" method="post">
                <div class="modal-body">
                    <!-- Подай ID на продукта -->
                    <input type="hidden" name="ProductId" value="@Model.ProductId" />
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity:</label>
                        <input type="number" id="quantity" name="Quantity" class="form-control" value="@Model.Quantity" min="1" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                    <button type="button" class="btn btn-secondary" onclick="window.history.back()">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
